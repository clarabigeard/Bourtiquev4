{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
    <h3>Liste des clients</h3>
    <ul>
        {% if lesClients is defined and lesClients|length>0 %}
            {% for unClient in lesClients %}
                <li>
                    <span>{{ unClient.nom }}, </span>
                    <span>{{ unClient.email }}</span>
                    <span><a href="{{ path('client_edit', {id: unClient.id}) }}">Modifier</a></span>
                    <span><a href="{{ path('client_delete', {id: unClient.id}) }}">Supprimer</a></span>
                </li>
            {% endfor %}
        {% else %}
            <li> Aucun client pr√©sent dans la BDD </li>
        {% endif %}
    </ul>
{% endblock %}
