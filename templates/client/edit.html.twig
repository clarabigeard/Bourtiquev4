{% extends 'base.html.twig' %}

{% block title %}Modification d'un client{% endblock %}

{% block body %}
    <h3>Ajout d'un client</h3>

    <ul>
        <form action="{{ path('/client_edit', {id:leCLient.id}) }}" method="post">
            <li><label>Email<input type="text" name="email" placeholder="email" value="{{ leClient.email }}"></label>
                <span class="erreur">
                    {% if erreur.email is defined %}
                        {{ erreur.email }}
                    {% endif %}
                </span>
            </li>
            <li><label>Nom<input type="text" name="nom" placeholder="nom"></label>
                <span class="erreur">
                    {% if erreur.nom is defined %}
                        {{ erreur.nom }}
                    {% endif %}
                </span>
            </li>
            <li><label>Prenom<input type="text" name="prenom" placeholder="prenom"></label></li>
            <li><label>Téléphone<input type="text" name="telephone" placeholder="telephone"></label></li>
            <li><label>Date de naissance<input type="date" name="date_naissance" value="2010-01-01"></label></li>

            <input type="submit" value="Ajouter">
    </ul>
    <ul>
        <input type="submit" value="Jeu d'essai">
        </form>
    </ul>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <script>
        $(document).ready(function (e){
            $("#jeuEssai").on("click",function (e){
                $("[name=email]").val("toto@toto.fr");
                $("[name=nom]").val("toto");
                $("[name=prenom]").val("letoto");
                $("[name=telephone]").val("0614061406");
                $("[name=date_naissance]").val("2010-06-06");
            })
        })        ;
    </script>
{% endblock %}